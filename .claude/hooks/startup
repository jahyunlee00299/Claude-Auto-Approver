#!/bin/bash
# Auto-start OCR Auto Approver when Claude Code starts

PROJECT_DIR="C:/Users/Jahyun/PycharmProjects/Claude-Auto-Approver"
cd "$PROJECT_DIR"

echo ""
echo "============================================"
echo "  Claude Auto Approver"
echo "============================================"

# Check if already running
if pgrep -f "ocr_auto_approver.py" > /dev/null 2>&1; then
    echo "  Status: Running"
    echo ""
    echo "  Commands:"
    echo "    Stop:    python stop_approver.py"
    echo "    Restart: python ocr_auto_approver.py"
    echo "============================================"
    echo ""
    exit 0
fi

# Start in background
nohup python ocr_auto_approver.py > /dev/null 2>&1 &
echo "  Status: Started (PID: $!)"
echo ""
echo "  Commands:"
echo "    Stop:    python stop_approver.py"
echo "    Restart: python ocr_auto_approver.py"
echo "============================================"
echo ""
